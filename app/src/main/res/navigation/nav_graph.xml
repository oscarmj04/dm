<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/taskListFragment">

    <!-- LISTA -->
    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.example.myapplication.fragments.TaskListFragment"
        android:label="Lista de tareas"
        tools:layout="@layout/fragment_task_list">

        <action
            android:id="@+id/action_taskListFragment_to_taskDetailFragment"
            app:destination="@id/taskDetailFragment" />

        <action
            android:id="@+id/action_taskListFragment_to_taskFormFragment"
            app:destination="@id/taskFormFragment" />
    </fragment>

    <!-- DETALLE -->
    <fragment
        android:id="@+id/taskDetailFragment"
        android:name="com.example.myapplication.fragments.TaskDetailFragment"
        android:label="Detalles de la tarea"
        tools:layout="@layout/fragment_task_detail">

        <!-- VOLVER (opcional si usas el backbutton) -->
        <action
            android:id="@+id/action_taskDetailFragment_to_taskListFragment"
            app:destination="@id/taskListFragment" />

        <!-- EDITAR -->
        <action
            android:id="@+id/action_taskDetailFragment_to_taskEditFragment"
            app:destination="@id/taskEditFragment" />
    </fragment>

    <!-- FORMULARIO: SOLO NUEVAS TAREAS -->
    <fragment
        android:id="@+id/taskFormFragment"
        android:name="com.example.myapplication.fragments.TaskFormFragment"
        android:label="Formulario de tarea"
        tools:layout="@layout/fragment_task_form" />

    <!-- EDITAR TAREA -->
    <fragment
        android:id="@+id/taskEditFragment"
        android:name="com.example.myapplication.fragments.TaskEditFragment"
        android:label="Editar tarea"
        tools:layout="@layout/fragment_task_edit">

        <argument
            android:name="taskId"
            app:argType="integer" />
    </fragment>

</navigation>
